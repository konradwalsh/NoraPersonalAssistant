{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=nora;Username=nora;Password=nora_dev_password",
    "Redis": "localhost:6379"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/nora-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AI": {
    "Provider": "Claude",
    "Claude": {
      "ApiKey": "",
      "Model": "claude-sonnet-4.5",
      "BaseUrl": "https://api.anthropic.com/v1"
    },
    "OpenAI": {
      "ApiKey": "",
      "Model": "gpt-4",
      "BaseUrl": "https://api.openai.com/v1"
    },
    "Gemini": {
      "ApiKey": "",
      "Model": "gemini-pro",
      "BaseUrl": "https://generativelanguage.googleapis.com/v1"
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama3"
    }
  },
  "Gmail": {
    "ClientId": "",
    "ClientSecret": "",
    "RedirectUri": "http://localhost:5000/auth/gmail/callback"
  },
  "WhatsApp": {
    "ApiKey": "",
    "PhoneNumberId": ""
  },
  "Twilio": {
    "AccountSid": "",
    "AuthToken": "",
    "PhoneNumber": ""
  },
  "Slack": {
    "ClientId": "",
    "ClientSecret": "",
    "RedirectUri": "http://localhost:5000/auth/slack/callback"
  },
  "Storage": {
    "Provider": "MinIO",
    "MinIO": {
      "Endpoint": "localhost:9000",
      "AccessKey": "nora",
      "SecretKey": "nora_dev_password",
      "BucketName": "nora-documents",
      "UseSSL": false
    }
  }
}
