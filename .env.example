# Nora Personal Assistant - Environment Variables

# Database
POSTGRES_PASSWORD=your_secure_password_here
ConnectionStrings__DefaultConnection=Host=postgres;Port=5432;Database=nora;Username=nora;Password=your_secure_password_here

# Redis
ConnectionStrings__Redis=redis:6379

# AI Providers (at least one required)
CLAUDE_API_KEY=your_claude_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Storage (MinIO/S3)
MINIO_ROOT_USER=nora
MINIO_ROOT_PASSWORD=your_secure_password_here

# Gmail Integration (optional)
Gmail__ClientId=your_gmail_client_id
Gmail__ClientSecret=your_gmail_client_secret

# WhatsApp Integration (optional)
WhatsApp__ApiKey=your_whatsapp_api_key
WhatsApp__PhoneNumberId=your_phone_number_id

# Twilio SMS Integration (optional)
Twilio__AccountSid=your_twilio_account_sid
Twilio__AuthToken=your_twilio_auth_token
Twilio__PhoneNumber=your_twilio_phone_number

# Slack Integration (optional)
Slack__ClientId=your_slack_client_id
Slack__ClientSecret=your_slack_client_secret

# Application Settings
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000
